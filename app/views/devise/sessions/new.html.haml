= render "shared/header" 

.login
  .login__box
    .login__box__caption
      %h2.login__box__caption--title
        Log in
      .login__box__caption--detail
        ログイン
      .login__box__caption__signup
        .login__box__caption__signup--text
          アカウントをお持ちでない方は、下記からアカウント作成
        .login__box__caption__signup--link
          = render "devise/shared/links"

    .login__box__form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

        .login__box__form--field
          = f.label :nickname, class: "field-name"
          %br/
          = f.text_field :nickname, class: "form-input", placeholder: "ニックネームを入力"

        .login__box__form--field
          = f.label :email, class: "field-name"
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input", placeholder: "メールアドレスを入力"
        
        .login__box__form--field
          = f.label :password, class: "field-name"
          %br/
          = f.password_field :password, autocomplete: "current-password", class: "form-input", placeholder: "パスワードを入力"
        - if devise_mapping.rememberable?
          .login__box__form--field
            = f.check_box :remember_me
            = f.label :remember_me, class: "field-name"

        .login__box__form--actions
          = f.submit "Log in", class: "action-btn"