=render "shared/header"

.signup
  .signup__box
    %h2.signup__box--title
      New Account
    .signup__box--detail
      
    
    .signup__form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource

        .signup__form--field
          = f.label :nickname
          %br/
          = f.text_field :nickname, class: "form-input", placeholder: "ニックネームを入力"

        .signup__form--field
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input", placeholder: "PC・スマホのアドレス可"

        .signup__form--field
          = f.label :password
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "new-password", class: "form-input", placeholder: "アルファベット・数字で6文字まで"

        .signup__form--field
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input", placeholder: "パスワードを再度入力"

        .signup__form--actions
          = f.submit "Sign up"
        
    = render "devise/shared/links"
